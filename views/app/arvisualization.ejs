                    <div class="text-truncate line2 w-100 fs-xsmall position-absolute d-flex align-items-center h30" style="bottom: -35px;"> 
                        <%= e.name; %>
                    </div>
                    </a>
                <!-- </div> -->
            <% }) %>
        </div>
    </div>
    <div id="wheelpicker" menucontainer class="d-flex d-none flex-nowrap w-100 overflow-auto hidescroll pe-auto">
        <div class="d-flex gap-3 p-3 pb-5"> 
            <% carwheel.map((e,index)=>{ %> 
                <!-- <div class="w70 d-flex flex-column align-items-center justify-content-start text-center gap-2"> -->
